<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cookforyou.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:padding="4dp"
        android:scrollbars="vertical"
        android:layout_marginBottom="50dp"
    />

    <Button
        android:id="@+id/addIngredientBtn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:background="#EE744D"
        android:text="Add Ingredient"
        android:textColor="#FFFF" />

    <ImageButton
        android:id="@+id/removeBtn"
        android:layout_width="59dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/queryBtn"
        android:background="#EE744D"
        android:src="@drawable/ic_delete_white_24dp" />

    <Button
        android:id="@+id/queryBtn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@id/addIngredientBtn"
        android:background="#EE744D"
        android:text="Feed Me"
        android:textColor="#FFFF" />

</RelativeLayout>

